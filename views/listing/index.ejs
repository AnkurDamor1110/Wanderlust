<% layout("/layouts/boilerplate") %>
<body>
    <h3>All Listing</h3>
    <!-- <form method="GET" action="/listing/new">
        <button>Add New Listing</button>
    </form> -->
    <div class="container-card">
      <% for( let listing of allListing) { %>
      <a href="/listing/<%= listing._id %>" class="listing-link">
      <div class="card listing-card" style="width: 20rem;">
        <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
           <b> <%= listing.title %> <br /> </b>
            &#8377; <%= listing.price.toLocaleString("en-IN") %>    <!-- .toLocaleString("en-IN") -->
          </p>
        </div>
      </div>
      <%  } %>
    
    </div>
  </a>
      
</body>


